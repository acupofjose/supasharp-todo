@using SupasharpTodo.Shared.Interfaces

<div class="block m-auto card card-compact max-w-sm bg-base-300 dark:bg-neutral text-center sm:py-0 py-2">
    <div class="card-body py-0">
        <div class="card-title justify-center">
            <h1 class="prose dark:text-white prose-xl">You must be logged-in before continuing.</h1>
        </div>
        <div class="card-content">
            <div class="stack mt-4">
                <DynamicComponent Type="@ComponentType"/>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Type ComponentType { get; set; }

}